<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/btn_success_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="success-title-message"/>

    <Button
        android:id="@+id/btn_success_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="success-message"/>

    <Button
        android:id="@+id/btn_fail_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="fail-title-message"/>

    <Button
        android:id="@+id/btn_fail_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="fail-message"/>

    <Button
        android:id="@+id/btn_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="default-message"/>

    <Button
        android:id="@+id/btn_default_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="default-message-thread"/>

    <Button
        android:id="@+id/btn_success_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="success-title-message-string-id"/>

    <Button
        android:id="@+id/btn_success_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="success-message-string-id"/>

</LinearLayout>